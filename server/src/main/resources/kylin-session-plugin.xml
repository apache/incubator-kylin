<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <beans profile="session-redis">
        <bean id="redisConnectionFactory"
              class="org.springframework.data.redis.connection.jedis.JedisConnectionFactory">
            <property name="hostName" value="${kylin.session.redis.host:127.0.0.1}"/>
            <property name="port" value="${kylin.session.redis.port:6379}"/>
            <property name="password" value="${kylin.session.redis.password:}"/>
            <property name="database" value="${kylin.session.redis.db:0}"/>
            <property name="useSsl" value="${kylin.session.redis.useSsl:false}"/>
            <property name="timeout" value="${kylin.session.redis.timeout:2000}"/>
            <property name="usePool" value="${kylin.session.redis.usePool:true}"/>
        </bean>
        <bean id="redisSessionRepository"
              class="org.springframework.session.data.redis.RedisOperationsSessionRepository">
            <constructor-arg index="0" ref="redisConnectionFactory"/>
        </bean>
    </beans>
</beans>